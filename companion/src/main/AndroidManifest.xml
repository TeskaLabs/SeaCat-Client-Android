<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teskalabs.seacat.android.companion" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LocalDiscoverActivity"
            android:label="@string/app_label" >
        </activity>
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".DashboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HttpClientActivity"
            android:label="@string/title_activity_http_client" >
        </activity>
        <activity
            android:name=".Base.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name=".Profiles.ProfilesActivity"
            android:label="@string/title_activity_profiles" >
        </activity>
        <activity
            android:name=".Profiles.EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teskalabs.seacat.android.companion.Profiles.ProfilesActivity" />
        </activity>
    </application>

</manifest>
